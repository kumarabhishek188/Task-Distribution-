{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Backend",
      "type": "shell",
      "command": "npm install",
      "options": { "cwd": "${workspaceFolder}/server" }
    },
    {
      "label": "Install Frontend",
      "type": "shell",
      "command": "npm install",
      "options": { "cwd": "${workspaceFolder}/client" }
    },
    {
      "label": "Start Frontend",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Start Backend",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "group": "build",
      "problemMatcher": []
    }
  ]
}
